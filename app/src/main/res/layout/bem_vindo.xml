<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F2C2C"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="BEM-VINDO(A)"
        android:textColor="#FFE74B"
        android:textSize="45sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="63dp" />

    <ImageView
        android:id="@+id/toothIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:src="@drawable/tooth_icon"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="113dp"/>

    <Button
        android:id="@+id/button"
        android:layout_width="250dp"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#FFBB00"
        android:gravity="center"
        android:text="Login"
        android:textColor="#000000"
        android:textSize="21sp" />

    <Button
        android:id="@+id/btnCriarLogin"
        android:layout_width="250dp"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:backgroundTint="#FFBB00"
        android:gravity="center"
        android:text="Criar login"
        android:textColor="#000000"
        android:textSize="21sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="113dp"/>

    <TextView
        android:id="@+id/endereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:drawableStart="@drawable/ic_location"
        android:text="Endereço:\nEstrada do M’boi Mirim 4778"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:drawablePadding="8dp"
        android:gravity="center" />
</LinearLayout>
