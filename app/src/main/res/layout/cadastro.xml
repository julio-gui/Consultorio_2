<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F2C2C"
    tools:context=".CadastroActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CADASTRO"
        android:textColor="#FFE74B"
        android:textSize="45sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"/>

    <EditText
        android:id="@+id/input_name"
        android:layout_width="250dp"
        android:layout_height="47dp"
        android:hint="Nome"
        android:textColorHint="#000000"
        android:backgroundTint="#FFBB00"
        android:textColor="#000000"
        android:padding="10dp"
        android:textSize="21sp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/input_number"
        android:layout_width="250dp"
        android:layout_height="47dp"
        android:hint="NÃºmero"
        android:inputType="phone"
        android:textColorHint="#000000"
        android:backgroundTint="#FFBB00"
        android:textColor="#000000"
        android:padding="10dp"
        android:textSize="21sp"
        app:layout_constraintTop_toBottomOf="@+id/input_name"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/input_email"
        android:layout_width="250dp"
        android:layout_height="47dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColorHint="#000000"
        android:backgroundTint="#FFBB00"
        android:textColor="#000000"
        android:padding="10dp"
        android:textSize="21sp"
        app:layout_constraintTop_toBottomOf="@+id/input_number"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/input_password"
        android:layout_width="250dp"
        android:layout_height="47dp"
        android:hint="Criar senha"
        android:inputType="textPassword"
        android:textColorHint="#000000"
        android:backgroundTint="#FFBB00"
        android:textColor="#000000"
        android:padding="10dp"
        android:textSize="21sp"
        app:layout_constraintTop_toBottomOf="@+id/input_email"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/input_confirm_password"
        android:layout_width="250dp"
        android:layout_height="47dp"
        android:hint="Confirmar senha"
        android:inputType="textPassword"
        android:textColorHint="#000000"
        android:backgroundTint="#FFBB00"
        android:textColor="#000000"
        android:padding="10dp"
        android:textSize="21sp"
        app:layout_constraintTop_toBottomOf="@+id/input_password"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_voltar"
        android:layout_width="175dp"
        android:layout_height="51dp"
        android:text="VOLTAR"
        android:textColor="#000000"
        android:textSize="25sp"
        android:backgroundTint="#FFBB00"
        app:layout_constraintTop_toBottomOf="@+id/input_confirm_password"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"/>

    <Button
        android:id="@+id/button_concluir"
        android:layout_width="175dp"
        android:layout_height="51dp"
        android:text="CONCLUIR"
        android:textColor="#000000"
        android:textSize="25sp"
        android:backgroundTint="#FFBB00"
        app:layout_constraintTop_toBottomOf="@+id/input_confirm_password"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
